      <th>Actual</th>
      <th>Week 3</th>
      <th>Actual</th>
      <th>Week 4</th>
      <th>Actual</th>
    </thead>
    <tbody>
    <tr>
      <td>Set 1</td>
      <td><%= "#{@schedule.week1[0][:expected]} " + @unit %> x 5</td>
