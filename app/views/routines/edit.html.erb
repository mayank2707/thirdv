<h1><%= @exercise.humanize %></h1>
<hr>
<%= form_tag routine_path(@exercise), method: :put, class: "form-search" do %>
  <%= label_tag :max_weight %>
  <%= text_field_tag :weight, @weight, class: "input-small" %>
  <%= select_tag :unit, "<option>lbs</option><option>kg</option".html_safe, class: "input-small" %><br>
  <%= submit_tag :Calculate, class: "btn btn-primary" -%>
<% end -%>
